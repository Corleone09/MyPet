<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNombreMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:fontFamily="cursive"
        android:text="Mascotas buscando hogar"
        android:textColor="#673D30"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ibtnMascotaInfo"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_margin="10sp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvRazaMascotaInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="TextView"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvEdadMascotaInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="TextView"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvNumeroMascotaInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:gravity="end"
        android:text="TextView"
        android:textColor="#4CAF50" />

</LinearLayout>